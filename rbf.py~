#!/usr/bin/env python
from __future__ import division
import numpy as np

def gauss(x,x_o,eps,diff=0):
  r = np.abs(x - x_o)
  if diff == 1:
    return (-2*r/(eps**2))*np.exp(-(r/eps)**2)
  if diff == 0:
    return np.exp(-(r/eps)**2)

def iquad(r,eps):
  return 1/(1 + (r/eps)**2)

def imquad(r,eps):
  return 1/np.sqrt(1 + (r/eps)**2)

  
